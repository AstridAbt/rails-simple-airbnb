<div class="container">
  <h1>All our flats</h1>
  <p>All <%= @flats.count %> flats</p>
  <div class="row">
        <% @flats.each do |flat| %>
          <div class="col-4 mx-1 my-3 border border-secondary">
            <div class="flat-card-image">
            </div>
            <div class="flat-card-content">
                <h4><%= flat.name %></h4>
              <p><%= flat.address %></p>
              <div class="flex">
                  <i class="material-icons">people</i>
                  <span><%= flat.number_of_guests %></span>
                  <i class="material-icons ml-1">euro_symbol</i>
                  <span><%= flat.price_per_night %></span>
              </div>
            </div>
            <div class="flat-card-actions">
              <%= link_to "More info", flat_path(flat) %>
            </div>
          </div>
        <% end %>
  </div>
</div>


